<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}PanierDeSymfony{% endblock %}</title>
        {# balise meta #}
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="Content-Type" content="UTF-8">
        <meta name="content-language" content="fr">
        <meta name="keywords" content="e-commerce, panier, cart, profil, commande user, commandes user, site exemple, symfony6">
        <meta name="description" content="Exemple d’un site e-commerce avec affichage d’un panier , des commandes et d’un profil de l’utilisateur.">
        <meta name="copyright" content="2022 - AllaLOD - PanierDeSymfony - exemple - tous droits reservés">
        <meta name="author" content="Alla Dumenil">
        <meta name="identifier-Url" content="https://www.panier-de-symfony.fr">
        <meta name="reply-to" content="contact@panier-de-symfony.fr">
        <meta name="revisit-after" content="1 day">
        <meta name="robots" content="all">
        {% block stylesheets %}
            {# {{ encore_entry_link_tags('app') }} #}
        {% endblock %}
        {# CSS only #}
        <link rel="stylesheet" type='text/css' href="{{ asset('CSS/site.css')}}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
        <link type="image/gif" rel="icon" href="{{ asset('../uploads/logo/logo.jpg')}}">
    </head>
    <body>
   
        <div class="container-fluid nav_header">
        <header class=" d-flex flex-wrap align-items-center  justify-content-around py-3  border-bottom">
            <a href="{{ path('home')}}" class="d-flex align-items-center col-md-2 mb-2 mb-md-0 text-dark text-decoration-none">
                <img id="logo_img" src="{{ asset('../uploads/logo/logo.jpg')}}" width="60" alt="logo">
            </a>

            <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                <li><a href="{{ path('home')}}" class="nav-link px-2 link-dark">Accueil</a></li>
                <li><a href="{{ path('produits')}}" class="nav-link px-2 link-dark">Produits</a></li>
                <li><a href="{{ path('app_contact')}}" class="nav-link px-2 link-dark">Contact</a></li>
            </ul>

            <ul class="nav d-flex justify-content-center  mb-2 mb-md-0">
            
        {# condition d'affichage des lien connexion ou déconnexion #}
            {% if app.user %}

                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('admin')}}" class="nav-link link-dark px-2">Backoffice</a></li> 
                {% endif %}

                <li><a class="nav-link link-dark px-2" href="{{path('app_logout')}}"><p class="nav-titer">Déconnexion</p></a></li>
                <li><a href="{{ path('profile')}}" class="nav-link link-dark px-2"><i class="bi bi-person-circle" style="font-size: 1.5rem"></i></a></li>  
            {% else %}

                <li><a class="nav-link link-dark px-2" href="{{path('app_register')}}">Inscription</a></li>
                
                <li><a class="nav-link link-dark px-2" href="{{path('app_login')}}">Connexion</a></li>
            {% endif %}
            <li><a href="{{ path('cart')}}" class="nav-link link-dark px-2"><i class="bi bi-cart3" style="font-size: 1.5rem"></i></a></li>
   
            </ul>   
        </header>
        </div>

        <main>
          
                {% block body %}
                {% endblock %}
            
       
        </main>
        <footer class="nav_footer d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 border-top">
            <div class="mx-auto">
                    <h2 class="text-center"><a href="https://github.com/AllaLOD" target="blanc"><i class="bi bi-github text-dark"></i></a></h2>
                    <small class="mb-3 text-dark">&copy; 2022 - AllaLOD - PanierDeSymfony - exemple - tous droits reservés</small>
            </div>
        </footer>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    {# integration de JS de bootsrap #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script> 
    </body>
</html>
